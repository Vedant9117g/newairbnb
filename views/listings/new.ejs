<%- layout('layouts/boilerplate') %>

<h2 class="text-3xl font-bold text-gray-800 mb-6">Create a New Listing</h2>

<form action="/listings" method="POST" class="space-y-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="form-group">
      <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
      <input
        type="text"
        id="title"
        name="listing[title]"
        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
        required
      />
    </div>

    <div class="form-group">
      <label for="price" class="block text-sm font-medium text-gray-700">Price (INR)</label>
      <input
        id="price"
        name="listing[price]"
        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
        required
      />
    </div>

    <div class="form-group">
      <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
      <input
        type="text"
        id="location"
        name="listing[location]"
        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
        required
      />
    </div>

    <div class="form-group">
      <label for="country" class="block text-sm font-medium text-gray-700">Country</label>
      <input
        type="text"
        id="country"
        name="listing[country]"
        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
        required
      />
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
    <textarea
      id="description"
      name="listing[description]"
      rows="4"
      class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
      required
    ></textarea>
  </div>

  <div class="form-group">
    <label for="image" class="block text-sm font-medium text-gray-700">Image URL (Optional)</label>
    <input
      type="text"
      id="image"
      name="listing[image][url]"
      class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
      placeholder="Enter image URL or leave blank for default"
    />
    <p class="text-sm text-gray-500 mt-1">
      Leave blank or provide a valid image URL. If left blank, a default image will be used.
    </p>
  </div>

  <div class="form-group">
    <button
      type="submit"
      class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded shadow transition"
    >
      Create Listing
    </button>
  </div>
</form>

<a href="/listings" class="text-blue-600 hover:text-blue-700 mt-6 inline-block">
  &larr; Back to Listings
</a>
