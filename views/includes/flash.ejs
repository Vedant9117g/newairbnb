<% if (success && success.length) { %>
    <div
      class="flex justify-between items-center bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4"
      role="alert"
    >
      <span><%= success %></span>
      <button class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.style.display='none';">
        <span class="text-green-500">&times;</span>
      </button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div
      class="flex justify-between items-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
      role="alert"
    >
      <span><%= error %></span>
      <button class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.style.display='none';">
        <span class="text-red-500">&times;</span>
      </button>
    </div>
<% } %>